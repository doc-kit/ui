{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "exclude": ["src/setupEnzyme.ts", "src/**/*.test.tsx", "src/**/*.stories.tsx"]
}
